<%- model_class = Reservation -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th>Pasajeros</th>
      <th><%= model_class.human_attribute_name(:vehicletype) %></th>
      <th><%= model_class.human_attribute_name(:beginningadress) %></th>
      <th><%= model_class.human_attribute_name(:destinationadress) %></th>
      <th><%= model_class.human_attribute_name(:price) %></th>
      <th><%= model_class.human_attribute_name(:vehicle_id) %></th>
      <th><%= model_class.human_attribute_name(:user_id) %></th>
      <th><%= model_class.human_attribute_name(:operator_id) %></th>
      <th><%= model_class.human_attribute_name(:status_id) %></th>
      <th><%= model_class.human_attribute_name(:paymenttype_id) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @reservations.each do |reservation| %>
      <tr>
        <td><%= link_to reservation.id, reservation_path(reservation) %></td>
        <td><%= reservation.passengersquantity %></td>
        <td><%= reservation.vehicletype %></td>
        <td><%= reservation.beginningadress %></td>
        <td><%= reservation.destinationadress %></td>
        <td><%= reservation.price %></td>
        <td><%= reservation.vehicle_id %></td>
        <td><%= reservation.user_id %></td>
        <td><%= reservation.operator_id %></td>
        <td><%= reservation.status_id %></td>
        <td><%= reservation.paymenttype_id %></td>
        <td><%=l reservation.created_at %></td>
        <td>
          <% if current_user %>
            <% if current_user.admin? %>
              <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_reservation_path(reservation), :class => 'btn btn-default btn-xs' %>
              <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                          reservation_path(reservation),
                          :method => :delete,
                          :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                          :class => 'btn btn-xs btn-danger' %>
            <% elsif current_user.user? %>
              <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      reservation_path(reservation),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
            <% end %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<% if current_user %>
  <% if current_user.admin? %>
      <%= link_to t('.new', :default => t("helpers.links.new")),
        new_reservation_path,
        :class => 'btn btn-primary' %>
  <% elsif current_user.user? %>
      <%= link_to t('.new', :default => t("helpers.links.new")),
        new_reservation_path,
        :class => 'btn btn-primary' %>
  <% end %>
<% end %>
