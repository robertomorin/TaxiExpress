<%= simple_form_for @reservation, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :passengersquantity %>
  <%= error_span(@reservation[:passengersquantity]) %>
  <%= f.input :vehicletype %>
  <%= error_span(@reservation[:vehicletype]) %>
  <%= f.input :originaddress %>
  <%= error_span(@reservation[:originaddress]) %>
  <%= f.input :destinationaddress %>
  <%= error_span(@reservation[:destinationaddress]) %>
  <%= f.input :price %>
  <%= error_span(@reservation[:price]) %>
  <%= f.input :date %>
  <%= error_span(@reservation[:date]) %>
  <%= f.input :vehicle_id %>
  <%= error_span(@reservation[:vehicle_id]) %>
  <%= f.input :user_id %>
  <%= error_span(@reservation[:user_id]) %>
  <%= f.input :operator_id %>
  <%= error_span(@reservation[:operator_id]) %>
  <%= f.input :status_id %>
  <%= error_span(@reservation[:status_id]) %>
  <%= f.input :paymenttype_id %>
  <%= error_span(@reservation[:paymenttype_id]) %>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                reservations_path, :class => 'btn btn-default' %>
<% end %>
