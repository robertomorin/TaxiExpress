<%- model_class = Driver -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:lastname) %></th>
      <th><%= model_class.human_attribute_name(:email) %></th>
      <th><%= model_class.human_attribute_name(:password) %></th>
      <th><%= model_class.human_attribute_name(:vehicle_id) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <% if current_user %>
        <% if current_user.admin? %>
          <th><%=t '.actions', :default => t("helpers.actions") %></th>
        <% elsif current_user.operator? %> 
          <th><%=t '.actions', :default => t("helpers.actions") %></th>
        <% end %>
      <% end %>
    </tr>
  </thead>
  <tbody>
    <% @drivers.each do |driver| %>
      <tr>
        <td><%= link_to driver.id, driver_path(driver) %></td>
        <td><%= driver.name %></td>
        <td><%= driver.lastname %></td>
        <td><%= driver.email %></td>
        <td><%= driver.password %></td>
        <td><%= driver.vehicle_id %></td>
        <td><%=l driver.created_at %></td>
        <% if current_user %>
          <% if current_user.admin? %>
            <td>
              <%= link_to t('.edit', :default => t("helpers.links.edit")),
                          edit_driver_path(driver), :class => 'btn btn-default btn-xs' %>
              <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                          driver_path(driver),
                          :method => :delete,
                          :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                          :class => 'btn btn-xs btn-danger' %>
            </td>
          <% elsif current_user.operator? %> 
            <%= link_to t('.edit', :default => t("helpers.links.edit")),
                          edit_driver_path(driver), :class => 'btn btn-default btn-xs' %>
          <% end %>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<% if current_user %>
  <% if current_user.admin? %>
    <%= link_to t('.new', :default => t("helpers.links.new")),
                new_driver_path,
                :class => 'btn btn-primary' %>
  <% end %>
<% end %>