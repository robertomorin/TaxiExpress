<%= simple_form_for @driver, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :name %>
  <%= error_span(@driver[:name]) %>
  <%= f.input :lastname %>
  <%= error_span(@driver[:lastname]) %>
  <%= f.input :email %>
  <%= error_span(@driver[:email]) %>
  <%= f.input :password %>
  <%= error_span(@driver[:password]) %>
  <%= f.input :vehicle_id %>
  <%= error_span(@driver[:vehicle_id]) %>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                drivers_path, :class => 'btn btn-default' %>
<% end %>
