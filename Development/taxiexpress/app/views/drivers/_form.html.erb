<%= simple_form_for(@driver) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :lastname %>
    <%= f.input :email %>
    <%= f.input :password %>
    <%= f.association :vehicle %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
