<%= simple_form_for @operator, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :name %>
  <%= error_span(@operator[:name]) %>
  <%= f.input :lastname %>
  <%= error_span(@operator[:lastname]) %>
  <%= f.input :mail %>
  <%= error_span(@operator[:mail]) %>
  <%= f.input :password %>
  <%= error_span(@operator[:password]) %>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                operators_path, :class => 'btn btn-default' %>
<% end %>
